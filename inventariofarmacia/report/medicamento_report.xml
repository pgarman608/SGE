<odoo>
    <record model="ir.actions.report" id="inventariofarmacia.medicamento_report" >
        <field name="name"> Informe del medicamento</field>
        <field name="model">inventariofarmacia.medicamento</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventariofarmacia.medicamento_report_view</field>
        <field name="report_file">inventariofarmacia.medicamento_report</field>
        <field name="binding_model_id" ref="model_inventariofarmacia_medicamento"/>
        <field name="binding_type">report</field>

    </record>
    <template id="medicamento_report_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <h1>Medicamentos </h1><br />
                <t t-foreach="docs" t-as="medicamento">
                    <ul>
                        <li>    Codigo <span t-field="medicamento.name" /></li>
                        <li>    Nombre <span t-field="medicamento.nombre" /></li>
                        <li>    Fabriante <span t-field="medicamento.fabricante" /></li>
                        <li>    Forma <span t-field="medicamento.forma" /></li>
                        <li>    NÂº Lote <span t-field="medicamento.numlote" /></li>
                        <li>    Precio <span t-field="medicamento.precio" /></li>
                    </ul>
                </t>
            </t>
        </t>
    </template>

</odoo>