<odoo>
    <record model="ir.actions.report" id="inventariofarmacia.factura_report" >
        <field name="name"> Informe del Factura</field>
        <field name="model">inventariofarmacia.factura</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">inventariofarmacia.factura_report_view</field>
        <field name="report_file">inventariofarmacia.factura_report</field>
        <field name="binding_model_id" ref="model_inventariofarmacia_factura"/>
        <field name="binding_type">report</field>

    </record>
    <template id="factura_report_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <h1>Factura </h1><br />
                <t t-foreach="docs" t-as="factura">
                    <ul>
                        <li>    Codigo <span t-field="factura.name" /></li>
                        <li>    Nombre del cliente <span t-field="factura.nombre_cliente" /></li>
                        <li>    Precio total <span t-field="factura.precio_total" /></li>
                    </ul>
                </t>
            </t>
        </t>
    </template>
</odoo>